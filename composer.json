{
    "name": "beyondcode/laravel-confirm-email",
    "description": "Add email verification to your Laravel projects.",
    "keywords": [
        "beyondcode",
        "laravel-confirm-email"
    ],
    "homepage": "https://github.com/beyondcode/laravel-confirm-email",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "marcel@beyondco.de",
            "homepage": "https://beyondcode.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/auth": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/database": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/notifications": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/support": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "orchestra/testbench": "~3.5.0|~3.6.0|~3.7.0|~3.8.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "BeyondCode\\EmailConfirmation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeyondCode\\EmailConfirmation\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BeyondCode\\EmailConfirmation\\EmailConfirmationServiceProvider"
            ]
        }
    }
}
